<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="attendance.controller.StudentNotificationsController"
      spacing="15"
      styleClass="content-container">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <!-- Header -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="â† Back" onAction="#handleBack" 
                style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-padding: 5 15;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="titleLabel" text="Notifications" 
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Mark All Read" onAction="#handleMarkAllAsRead" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 5 15;"/>
        <Button text="Refresh" onAction="#handleRefresh" 
                style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-padding: 5 15;"/>
    </HBox>
    
    <Separator/>
    
    <!-- Notifications List -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
        <VBox fx:id="notificationsContainer" spacing="10" alignment="TOP_CENTER"/>
    </ScrollPane>

</VBox>
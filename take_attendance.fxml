<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="attendance.controller.TakeAttendanceController"
      stylesheets="@/attendance/style/dashboard.css"
      spacing="20"
      styleClass="content-container">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <!-- Header -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="ðŸ“ Take Attendance" styleClass="dashboard-title"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>
    
    <!-- Class and Date Selection -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="form-container">
        <VBox spacing="5" prefWidth="200">
            <Label text="Select Class:" styleClass="form-label"/>
            <ComboBox fx:id="classComboBox" promptText="Choose class" styleClass="combo-box"/>
        </VBox>
        
        <VBox spacing="5" prefWidth="200">
            <Label text="Select Date:" styleClass="form-label"/>
            <DatePicker fx:id="datePicker" styleClass="date-picker"/>
        </VBox>
        
        <Region HBox.hgrow="ALWAYS"/>
        
        <VBox spacing="5">
            <Label text="Actions:" styleClass="form-label"/>
            <Button fx:id="startAttendanceButton" text="Load Students" onAction="#handleStartAttendance" styleClass="primary-button"/>
        </VBox>
    </HBox>
    
    <!-- Attendance Actions -->
    <HBox spacing="10" alignment="CENTER_LEFT" styleClass="info-card">
        <Label text="Quick Actions:" styleClass="card-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Mark All Present" onAction="#handleMarkAllPresent" styleClass="success-button"/>
        <Button text="Mark All Absent" onAction="#handleMarkAllAbsent" styleClass="danger-button"/>
        <Button text="Save Attendance" onAction="#handleSaveAttendance" styleClass="primary-button"/>
    </HBox>
    
    <!-- Student Attendance Table -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <HBox>
            <Label text="Student Attendance List" styleClass="section-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="studentCountLabel" text="0 students loaded" styleClass="card-subtitle"/>
        </HBox>
        
        <TableView fx:id="attendanceTable" styleClass="data-table" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="studentIdColumn" text="Student ID" prefWidth="120"/>
                <TableColumn fx:id="nameColumn" text="Student Name" prefWidth="250"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="150"/>
                <TableColumn fx:id="remarksColumn" text="Remarks" prefWidth="200"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
    
    <!-- Summary and Actions -->
    <HBox spacing="20" styleClass="teacher-card">
        <VBox spacing="5">
            <Label text="ðŸ“Š Attendance Summary" styleClass="card-title"/>
            <Label fx:id="summaryLabel" text="Select a class and date to begin" styleClass="card-subtitle"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Print Report" onAction="#handlePrintReport" styleClass="secondary-button"/>
        <Button text="Submit Attendance" onAction="#handleSubmitAttendance" styleClass="primary-button"/>
    </HBox>

</VBox>